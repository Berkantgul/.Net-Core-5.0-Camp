@model AuthorUpdateModel
@{
    Layout = "../Shared/_AuthorLayout.cshtml";
    ViewData["Title"] = "AuthorUpdate";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profilini Güncelle</h4>
            <form class="forms-sample" asp-controller="Author" asp-action="AuthorUpdate" enctype="multipart/form-data">
                <input type="hidden" asp-for="AuthorId">
                <div class="form-group">
                    <label for="exampleInputName1">Adınız</label>
                    <input class="form-control" id="exampleInputName1" asp-for="AutorName">
                    <span class="text-danger" asp-validation-for="AutorName"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email</label>
                    <input class="form-control" id="exampleInputEmail3" asp-for="Mail">
                    <span class="text-danger" asp-validation-for="Mail"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input class="form-control" id="exampleInputPassword4" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input class="form-control" id="exampleInputPassword4" asp-for="ConfirmPassword">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>

                <div class="form-group">
                    <label>Resim Yükle</label>
                    <input type="file" asp-for="AuthorImage" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Gözat</button>
                        </span>
                    </div>
                    <span class="text-danger" asp-validation-for="AuthorImage"></span>
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                    <textarea class="form-control" id="exampleTextarea1" asp-for="AuthorAbout" rows="4"></textarea>
                    <span class="text-danger" asp-validation-for="AuthorAbout"></span>
                </div>
                <button type="submit" class="btn btn-gradient-success btn-rounded">Güncelle</button>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
<script src="~/writer/assets/js/file-upload.js"></script>
}
