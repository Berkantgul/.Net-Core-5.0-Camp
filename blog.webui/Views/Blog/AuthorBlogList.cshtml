@model List<Blog>
@{
    Layout = "../Shared/_AuthorLayout.cshtml";
    ViewData["Title"] = "AuthorBlogList";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bloglarım</h4>
            </p>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th> Yazar </th>
                        <th> Blog Başlık </th>
                        <th> Başarı Durumu </th>
                        <th> Durum </th>
                        <th> Oluşturulma tarihi </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="~/writer/assets/images/faces-clipart/pic-2.png" alt="image" />
                            </td>
                            <td> @blog.BlogTitle </td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%"
                                    aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </td>
                            <td> @blog.BlogStatus </td>
                            <td> @blog.BlogCreateDate.ToString("dd-MMM-yy") </td>
                            <td><a href="#" class="btn btn-gradient-primary btn-sm">Düzenle</a></td>
                            <td><a href="#" class="btn btn-gradient-warning btn-sm">Sil</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <br>
            <a href="/Blog/AuthorAddBlog/" class="btn btn-info btn-sm">Blog Ekle</a>
        </div>
    </div>
</div>