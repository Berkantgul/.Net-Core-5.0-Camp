@model List<Blog>
@{
    Layout = "../Shared/_AuthorLayout.cshtml";
    ViewData["Title"] = "AuthorBlogList";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bloglarım</h4>
            </p>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th> Yazar </th>
                        <th> Blog Başlık </th>
                        <th> Başarı Durumu </th>
                        <th> Durum </th>
                        <th> Oluşturulma tarihi </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="~/WriterImageFiles/@blog.Author.AuthorImage" alt="image" />
                            </td>
                            <td> @blog.BlogTitle </td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%"
                                    aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </td>
                            <td> @blog.BlogStatus </td>
                            <td> @blog.BlogCreateDate.ToString("dd-MMM-yyyy") </td>
                            <td>
                                
                                <a href="/Blog/AuthorEditBlog/@blog.BlogId" class="btn btn-gradient-success btn-sm">
                                    <i class="mdi mdi-tooltip-edit"></i>
                                </a>
                            </td>
                            <td>

                                <button type="button" class="btn btn-gradient-danger btn-sm" data-toggle="modal"
                                data-target="#Sil_@blog.BlogId"><i class="mdi mdi-delete"></i>
                                    
                                </button>

                                <!--Modal-->
                            <div class="modal fade" id="Sil_@blog.BlogId" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Blog Sil</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <h4>Bloğu silmek istiyor musunuz?</h4>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-gradient-info mx-4"
                                                data-dismiss="modal">Vazgeç</button>
                                                @Html.ActionLink("Sil", "AuthorDeleteBlog", new { id = @blog.BlogId }, new {
                                            @class = "btn btn-gradient-danger mx-4" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <br>
            <a href="/Blog/AuthorAddBlog/" class="btn btn-gradient-info btn-rounded">Blog Ekle</a>
        </div>
    </div>
</div>
