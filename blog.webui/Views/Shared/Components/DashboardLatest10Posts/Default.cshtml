@model List<Blog>


    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Post</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> #</th>
                                <th>Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih</th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var blog in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/web/@blog.BlogImage" class="mr-2" alt="image">
                                    </td>
                                    <td> @blog.BlogTitle </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@blog.Category.CategoryName</label>
                                    </td>
                                    <td> @blog.BlogCreateDate.ToString("dd-MMMM-yyyy") </td>
                                    <td> <a href="/Blog/BlogDetail/@blog.BlogId" class="btn btn-gradient-success btn-sm btn-rounded">Siteye Git</a> </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>