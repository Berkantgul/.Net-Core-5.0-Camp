@model List<Blog>
<div class="tech-btm">
    <h4>Yazarın diğer yazıları</h4>
    @foreach (var blog in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogDetail/@blog.BlogId">
                    <img src="~/web/@blog.BlogImage" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="/Blog/BlogDetail/@blog.BlogId">@blog.BlogTitle </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @blog.BlogCreateDate.ToString("dd-MMM-yy")</span>
                </div>
            </div>

        </div>
    }


</div>